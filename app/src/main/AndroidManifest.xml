<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.wefour.classmanager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/image"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/image"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.StudentViewRecordActivity"></activity>
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.GroupChatActivity" />
        <activity android:name=".activities.StudentMainActivity" />
        <activity android:name=".activities.TeacherMainActivity" />
        <activity android:name=".activities.CreateClassActivity" />
        <activity android:name=".activities.AllotMarksActivity" />
        <activity android:name=".activities.TakeAttendanceActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".activities.TeacherProfileActivity" />
        <activity android:name=".activities.StudentProfileActivity" />
    </application>

</manifest>